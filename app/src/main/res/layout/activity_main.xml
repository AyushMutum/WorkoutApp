<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tv_Hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_message"
        android:textColor="#1A237E"
        android:textSize="23.5sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.082" />

    <TextView
        android:id="@+id/tv_yoga"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/dashboard_text_bg"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/yoga"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/tv_Hello"
        app:layout_constraintStart_toStartOf="@id/tv_Hello"
        app:layout_constraintTop_toBottomOf="@id/tv_Hello" />

    <TextView
        android:id="@+id/tv_fitness"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/dashboard_text_bg"
        android:gravity="center"
        android:padding="10dp"
        android:text="Fitness"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/tv_yoga"
        app:layout_constraintStart_toStartOf="@id/tv_yoga"
        app:layout_constraintTop_toBottomOf="@id/tv_yoga" />

    <TextView
        android:id="@+id/tv_cardio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/dashboard_text_bg"
        android:gravity="center"
        android:padding="10dp"
        android:text="Cardio"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/tv_fitness"
        app:layout_constraintStart_toStartOf="@id/tv_fitness"
        app:layout_constraintTop_toBottomOf="@id/tv_fitness" />


    <TextView
        android:id="@+id/tv_weightTraining"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/dashboard_text_bg"
        android:gravity="center"
        android:padding="10dp"
        android:text="Weight Training"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/tv_cardio"
        app:layout_constraintStart_toStartOf="@id/tv_cardio"
        app:layout_constraintTop_toBottomOf="@id/tv_cardio" />

    <Button
        android:id="@+id/tv_btn_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Become Pro"
        android:textSize="15sp"
        android:background="@drawable/button_bg_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.992"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.965" />


</androidx.constraintlayout.widget.ConstraintLayout>