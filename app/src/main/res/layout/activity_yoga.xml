<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".YogaActivity">


    <TextView
        android:id="@+id/tv_yoga_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yoga for Mind Body"
        android:textColor="#1A237E"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.082" />

    <TextView
        android:id="@+id/tv_yoga_beginner"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dashboard_text_bg"
        android:gravity="center"
        android:padding="7dp"
        android:text="Beginner Yoga Exercise"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.289" />


    <TextView
        android:id="@+id/tv_yoga_intermediate"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/dashboard_text_bg"
        android:gravity="center"
        android:padding="7dp"
        android:text="Intermediate Yoga Excersize"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_yoga_beginner"
        app:layout_constraintStart_toStartOf="@+id/tv_yoga_beginner"
        app:layout_constraintTop_toBottomOf="@+id/tv_yoga_beginner" />

</androidx.constraintlayout.widget.ConstraintLayout>